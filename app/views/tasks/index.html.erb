<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= check_box_tag 'completed', '1', task.completed %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete this task",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
<%= link_to "Create a brand new task", new_task_path %>